{
	"name": "msh",
	"version": "1.0.0",
	"private": "true",
	"description": "",
	"license": "MIT",
	"author": "Milos Bugarinovic <milos.bugarinovic@gmail.com> (https://milos.bugarinovic.com)",
	"type": "module",
	"workspaces": [
		"packages/config",
		"packages/error",
		"packages/util",
		"packages/node-session",
		"packages/logger",
		"packages/env",
		"packages/cli",
		"packages/test-contractor",
		"packages/app-boot",
		"packages/entity",
		"packages/orm",
		"packages/base-frame"
	],
	"scripts": {
		"build": "npm run build -ws",
		"build-cjs": "npm run build-cjs -ws",
		"clean": "rimraf ./packages/**/dist/*",
		"clean-cjs": "rimraf ./packages/**/lib/*",
		"docs": "concurrently -c auto 'npm:docs:*'",
		"docs:puml-md": "puml-for-markdown -i .pumlignore",
		"lint": "npm run lint-json",
		"lint-fix": "npm run lint-json-fix",
		"lint-json": "npm run lint-json-fix -- -c",
		"lint-json-fix": "jsonsort -t *.json '!./packages' '!./node_modules' '!./base-temp' '!./**/.env*'",
		"npm-ncu-check": "ncu && npm run ws-npm-ncu-check",
		"npm-ncu-update": "ncu -u && npm run ws-npm-ncu-update",
		"tsc": "tsc -b ./tsconfig.json",
		"tsc-clean-watch": "# ./resource/script/tsc/clean-watch.sh error util logger node-session test-contractor env app-boot entity base-frame orm cli",
		"watch": "concurrently -c auto 'npm:watch:*'",
		"watch:build": "# npm run tsc -- --watch --preserveWatchOutput",
		"watch:clean": "# npm run tsc-clean-watch",
		"ws-doc": "resource/script/npm/ws-parallel-by-project-exec.sh -c doc",
		"ws-i": "npm i && npm run ws-npm-lock-file-generate",
		"ws-init": "resource/script/npm/ws-parallel-by-project-exec.sh -c init",
		"ws-lint": "resource/script/npm/ws-parallel-by-project-exec.sh -c lint",
		"ws-lint-fix": "resource/script/npm/ws-parallel-by-project-exec.sh -c lint-fix",
		"ws-npm-lock-file-generate": "resource/script/npm/ws-parallel-by-project-exec.sh -c npm-lock-file-generate",
		"ws-npm-ncu-check": "resource/script/npm/ws-parallel-by-project-exec.sh -c npm-ncu-check",
		"ws-npm-ncu-update": "resource/script/npm/ws-parallel-by-project-exec.sh -c npm-ncu-update",
		"ws-test": "resource/script/npm/ws-parallel-by-project-exec.sh -c test",
		"ws-tsc-check": "resource/script/npm/ws-parallel-by-project-exec.sh -c tsc-check"
	},
	"devDependencies": {
		"concurrently": "9.1.2",
		"json-sort-cli": "4.0.9",
		"puml-for-markdown": "1.2.1",
		"rimraf": "6.0.1",
		"ts-cleaner": "1.0.5",
		"tsc-alias": "1.8.11",
		"typescript": "5.7.3"
	},
	"engines": {
		"node": ">=22.14.0",
		"npm": ">=10.9.2"
	}
}
